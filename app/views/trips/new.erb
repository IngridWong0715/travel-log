
 <div class="container">
  <div class="row align-items-center justify-content-center">
     <div class="col-lg-6">
      <form action="/my-trips" method="POST">
        <div class="form-group">
          <label for="Origin">Origin</label>
          <input type="string" class="form-control" name="trip[origin]"  id="origin" placeholder="City, Country" required pattern="[a-zA-Z]+,\s[a-zA-Z]+">
        </div>
        <div class="form-group">
          <label for="destination">Destination</label>
          <input type="string" class="form-control" name="trip[destination]"  id="destination" placeholder="City, Country" required>
        </div>
        <div class="form-group">
          <label for="departing">Departing</label>
          <input type="date" class="form-control" name="trip[departing]"  id="departing" placeholder="Departing" required>
        </div>
        <div class="form-group">
          <label for="returning">Returning</label>
          <input type="date" class="form-control" name="trip[returning]" id="returning" placeholder="Returning" required>
        </div>

        <div class="form-group">
          <label for="transportation">Transportation</label>
          <input type="string" class="form-control" name="trip[transportation]" id="transportation" placeholder="Transportation" required>
        </div>

        <button type="submit" class="btn btn-primary">Create Trip</button>
      </form>
    </div>
    <div class="col-lg-3"></div>
  </div>
</div>
<input type="button" class="btn btn-info" value="Cancel" onclick="location.href = '/';">
