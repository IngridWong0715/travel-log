<% if @trips.empty? %>
  No result.
<% else %>
  Your search has <%=@trips.size%> result(s):
  <br></br>
  <section class="col-sm-8 table-responsive">
    <table class="table table-bordered table-striped table-condensed">
      <thead>
        <tr> <th>Origin</th> <th>Destination</th><th>Departing</th><th>Returning</th><th>Transportation</th>   </tr>
      </thead>
      <tbody>
        <%@trips.each do |trip|%>
        <tr>
          <td><%=trip.origin%></td>
          <td><%=trip.destination%></td>
          <td><%=trip.departing%></td>
          <td><%=trip.returning%></td>
          <td><%=trip.transportation%></td>

          <td>
            <form method="get" action="/my-trips/<%=trip.slug%>/edit">
              <button type="submit">Edit Trip</button>
            </form>
          </td>
          <td>
            <form action="/my-trips/<%=trip.slug%>" method="POST">
              <input type="hidden" id="hidden" name="_method" value="DELETE">
              <input type="submit" value="Delete Trip">
            </form>
          </td>
        </tr>
        <%end%>

      </tbody>
      </table>
  </section>

<%end %>

